<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_view_mood"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cmput301w17t08.moodr.ViewMoodActivity">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">


        <TextView
            android:text="Mood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/viewMoodMood" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="#dddddd"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="5dp"
            android:id="@+id/viewMoodIcon"/>


    </RelativeLayout>



    <TextView
        android:text="Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/viewMoodDate" />

    <TextView
        android:text="Social Situation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewMoodDate"
        android:layout_alignLeft="@+id/viewMoodDate"
        android:layout_alignStart="@+id/viewMoodDate"
        android:layout_marginTop="26dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/viewMoodSocialSituation" />

    <TextView
        android:text="Trigger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewMoodSocialSituation"
        android:layout_alignLeft="@+id/viewMoodSocialSituation"
        android:layout_alignStart="@+id/viewMoodSocialSituation"
        android:layout_marginTop="26dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/viewMoodTrigger" />

    <TextView
        android:text="Location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewMoodTrigger"
        android:layout_alignLeft="@+id/viewMoodTrigger"
        android:layout_alignStart="@+id/viewMoodTrigger"
        android:layout_marginTop="26dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/viewMoodLocation" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:id="@+id/viewMoodImage"/>

</RelativeLayout>
