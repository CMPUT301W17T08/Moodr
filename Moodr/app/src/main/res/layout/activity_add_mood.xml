<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_emotion"
        android:text="Mood"

        />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sp_emotion"
        android:spinnerMode="dropdown"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_social_situation"
        android:text="Social Situation"

        />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_social_situation"
        android:spinnerMode="dropdown"

        />

    <TextView
        android:layout_width="357dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_trigger"
        android:text="Trigger (3 words or 20 characters)"

        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_trigger"
        android:inputType="text"
        android:maxLength="20"

        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="                                "
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_camera"
            android:src="@mipmap/ic_camera"
            android:background="#80FFFFFF"
            />


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_picture"
            android:src="@mipmap/ic_gallery"
            android:background="#80FFFFFF"


            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_location"
            android:src="@mipmap/ic_map"
            android:background="#80FFFFFF"

            />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="223dp"
        android:id="@+id/iv_imageview" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Coordinates"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_location"
        android:layout_weight="0.52" />


</LinearLayout>